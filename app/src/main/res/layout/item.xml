<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="328dp"
            android:layout_height="207dp"
            android:src="@drawable/photo_1545291200_dfd334fcda76" />

        <TextView
            android:id="@+id/tva"
            android:layout_width="224dp"
            android:layout_height="58dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Blue Ocean"
            android:textColor="@color/black"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/tvb"
            android:layout_width="284dp"
            android:layout_height="58dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Waves Crash"
            android:textColor="@color/black"
            android:textSize="40dp" />


        <TextView
            android:id="@+id/tvc"
            android:layout_width="224dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Sea the beautiful ocean of the Pacific coast where the water is so
clean you can see the nature"
            android:textColor="@color/black"
            android:textSize="15dp" />
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="328dp"
            android:layout_height="207dp"
            android:src="@drawable/_200px_long_exposure_of_cable_bridge_on_durgam_cheruvu" />

        <TextView
            android:id="@+id/tvA"
            android:layout_width="284dp"
            android:layout_height="58dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:text="Long Exposer over bridge"
            android:textColor="@color/black"
            android:textSize="40dp" />
        <TextView
            android:id="@+id/tvB"
            android:layout_width="224dp"
            android:layout_height="71dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Long exposure photography when you leave the shutter open
            longer then usual to pick up more light"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>